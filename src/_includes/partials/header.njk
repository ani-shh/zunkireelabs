        <span class="text-xl font-semibold text-zunkiree-400">Zunkiree</span>
      </a>

      <!-- Desktop Navigation + Social -->
      <div class="hidden lg:flex items-center gap-8">
        <!-- Nav Links -->
        <div class="flex items-center gap-6">
          <a href="/about/" class="text-sm text-slate-300 hover:text-white transition-colors">About Us</a>
          <a href="/services/" class="text-sm text-slate-300 hover:text-white transition-colors">Services</a>
          <a href="/projects/" class="text-sm text-slate-300 hover:text-white transition-colors">Projects</a>
          <a href="/contact/" class="text-sm text-slate-300 hover:text-white transition-colors">Contact</a>
        </div>

