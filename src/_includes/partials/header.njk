        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden p-2 text-slate-300 hover:text-white transition-colors"
        @click="mobileMenuOpen = !mobileMenuOpen"
        aria-label="Toggle menu"
      >
        <svg x-show="!mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg x-show="mobileMenuOpen" x-cloak class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div
    class="lg:hidden fixed inset-x-0 top-[72px] bg-slate-950/98 backdrop-blur-xl border-b border-white/5 transition-all duration-300 ease-out"
    x-show="mobileMenuOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 -translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-4"
    @click.away="mobileMenuOpen = false"
    x-cloak
  >
    <div class="container mx-auto px-6 py-6">
      <div class="flex flex-col gap-2">
        <a href="/about/" class="px-4 py-3 text-base text-slate-300 hover:text-white hover:bg-white/5 rounded-lg transition-all" @click="mobileMenuOpen = false">About Us</a>
        <a href="/services/" class="px-4 py-3 text-base text-slate-300 hover:text-white hover:bg-white/5 rounded-lg transition-all" @click="mobileMenuOpen = false">Services</a>
        <a href="/projects/" class="px-4 py-3 text-base text-slate-300 hover:text-white hover:bg-white/5 rounded-lg transition-all" @click="mobileMenuOpen = false">Projects</a>
        <a href="/contact/" class="px-4 py-3 text-base text-slate-300 hover:text-white hover:bg-white/5 rounded-lg transition-all" @click="mobileMenuOpen = false">Contact</a>
        <!-- Mobile Social -->
        <div class="flex items-center gap-2 mt-4 pt-4 border-t border-white/10">
          <a href="{{ site.social.github }}" class="w-10 h-10 rounded-lg bg-white/5 flex items-center justify-center text-slate-400" aria-label="GitHub">
