<footer class="relative bg-slate-950 border-t border-white/5 pt-20 pb-8 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute bottom-0 left-1/4 w-96 h-96 bg-zunkiree-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-accent-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 lg:px-8 relative z-10">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8 mb-16">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-zunkiree-500 to-zunkiree-600 flex items-center justify-center">
            <span class="text-white font-bold text-lg">Z</span>
          </div>
          <span class="text-xl font-semibold text-white">Zunkiree<span class="text-zunkiree-400">Labs</span></span>
        </a>
        <p class="text-slate-400 text-sm leading-relaxed mb-6">
          {{ site.description }}
        </p>
        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <a href="{{ site.social.twitter }}" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center text-slate-400 hover:text-white transition-all duration-200" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a href="{{ site.social.linkedin }}" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center text-slate-400 hover:text-white transition-all duration-200" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href="{{ site.social.github }}" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center text-slate-400 hover:text-white transition-all duration-200" aria-label="GitHub">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
          </a>
        </div>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="text-white font-semibold mb-6">Company</h4>
        <ul class="space-y-4">
          {% for item in navigation.footer.company %}
            <li>
              <a href="{{ item.url }}" class="text-slate-400 hover:text-white text-sm transition-colors duration-200">{{ item.label }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Services Links -->
      <div>
        <h4 class="text-white font-semibold mb-6">Services</h4>
        <ul class="space-y-4">
          {% for item in navigation.footer.services %}
            <li>
              <a href="{{ item.url }}" class="text-slate-400 hover:text-white text-sm transition-colors duration-200">{{ item.label }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h4 class="text-white font-semibold mb-6">Stay Updated</h4>
        <p class="text-slate-400 text-sm mb-4">Get the latest insights and updates delivered to your inbox.</p>
        <form class="flex gap-2" x-data="{ email: '' }">
          <input
            type="email"
            x-model="email"
            placeholder="Enter your email"
            class="flex-1 px-4 py-2.5 bg-white/5 border border-white/10 rounded-lg text-white text-sm placeholder-slate-500 focus:outline-none focus:border-zunkiree-500 focus:ring-1 focus:ring-zunkiree-500 transition-all duration-200"
          >
          <button
            type="submit"
            class="px-4 py-2.5 bg-zunkiree-500 hover:bg-zunkiree-600 text-white text-sm font-medium rounded-lg transition-all duration-200"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-slate-500 text-sm">
        &copy; {% year %} {{ site.name }}. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        <a href="/privacy/" class="text-slate-500 hover:text-white text-sm transition-colors duration-200">Privacy Policy</a>
        <a href="/terms/" class="text-slate-500 hover:text-white text-sm transition-colors duration-200">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
